{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
          "@shared/*": ["../shared/*"]
        },
      
      "target": "ES2018",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./../",
      "resolveJsonModule": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  